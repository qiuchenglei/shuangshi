<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/layout_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_D8D8D8"
            android:visibility="visible">

        <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center"
                android:src="@drawable/pic_teacher" />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/layout_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_7">

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="bottom"
                android:background="@drawable/tv_bg_btn_radius_circle_black66"
                android:gravity="center"
                android:paddingStart="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_6" />

        <ImageView
                android:id="@+id/iv_icon_speaker"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="end|bottom"
                android:src="@drawable/icon_audio_actived" />

        <ImageView
                android:id="@+id/iv_icon_max"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="end"
                android:src="@drawable/icon_max" />

    </FrameLayout>

    <io.agora.rtc.shuangshi.widget.projection.ProjectionView
            android:id="@+id/projection_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</FrameLayout>